<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/img3"
    tools:context=".Login">

    <TextView
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textColor="#575252"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="#FFFFFF"
        app:cardBackgroundColor="#95FFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavendar_border"
            android:backgroundTint="#74FFFFFF"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We collect user data and device information to provide lost and found services, improve the app, and communicate with users. Your data is safeguarded for security, and we do not share it unless you consent or when legally required. You have the right to access, correct, or delete your information and manage communication preferences. We may update this policy and will post changes here. For questions or requests, please contact us at [Your Contact Information]. By using the app, you agree to these terms."
                android:textAlignment="viewStart"
                android:textColor="#575252"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>